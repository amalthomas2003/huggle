rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Each user can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Each user can read/write their own pets
    match /users/{userId}/pets/{petId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // âœ… Only allow these emails to read the admin password
    match /config/admin {
      allow read: if request.auth != null 
                  && (request.auth.token.email == "amalthomas2003@gmail.com" 
                      || request.auth.token.email == "u2109008@rajagiri.edu.in"
                      || request.auth.token.email == "kevinsunnymyladoor@gmail.com");
    }
  }
}
